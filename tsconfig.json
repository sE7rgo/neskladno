{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "newLine": "LF",
    "incremental": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["types"],
    "paths": {
      "*": ["types/*.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
